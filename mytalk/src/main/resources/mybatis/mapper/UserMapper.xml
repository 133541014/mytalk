<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.origen.mytalk.mapper.UserMapper">

    <resultMap id="UserMap" type="com.origen.mytalk.model.User" >
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="nickname" property="nickname"/>
        <result column="description" property="description"/>
        <result column="head_image" property="headImage"/>
        <result column="create_date" property="createDate"/>
    </resultMap>
    
    <select id="findByUsername" parameterType="String" resultMap="UserMap">
    	SELECT 
    		id,
    		username,
    		password,
    		email,
    		nickname,
    		description,
    		head_image,
    		create_date
    	FROM
    		t_user
    	WHERE
    		username = #{username}
    </select>
    
    <insert id="addUser" parameterType="com.origen.mytalk.model.User">
	   	INSERT INTO t_user (
			id,
			username,
			PASSWORD,
			email,
			nickname,
			create_date
		)
		VALUES
		(
			UUID(),
			#{username},
			#{password},
			#{email},
			#{nickname},
			#{createDate}
		)
    </insert>
    
     <select id="findByEmail" parameterType="String" resultMap="UserMap">
    	SELECT 
    		id,
    		username,
    		password,
    		email,
    		nickname,
    		description,
    		head_image,
    		create_date
    	FROM
    		t_user
    	WHERE
    		email = #{email}
    </select>
    
    
</mapper>